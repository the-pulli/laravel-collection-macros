{
    "name": "pulli/laravel-collection-macros",
    "description": "Package for some custom collection macros.",
    "keywords": [
        "laravel",
        "collection-macros",
        "macros"
    ],
    "homepage": "https://github.com/the-pulli/laravel-collection-macros",
    "license": "MIT",
    "authors": [
        {
            "name": "PuLLi",
            "email": "the@pulli.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0",
        "illuminate/collections": "^11.0||^12.0",
        "illuminate/support": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Pulli\\LaravelCollectionMacros\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pulli\\LaravelCollectionMacros\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pulli\\LaravelCollectionMacros\\CollectionMacrosServiceProvider"
            ],
            "aliases": {
                "CollectionMacros": "Pulli\\LaravelCollectionMacros\\Facades\\CollectionMacros"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
